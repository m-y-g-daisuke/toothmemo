= form_with(model: [@animal,post], local: true) do |f|
  .submit-box
    = f.submit "提出する"
  .date-tool-box
    .date-tool-box__left
      .date-tool-box__left--date
        = f.datetime_select :recorded_at,{default:Time.now}, class:"recorded_at"    
    .date-tool-box__right
      .date-tool-box__left--tool
        /= f.collection_check_boxes post, :tool_ids, Tool.all, :id, :type
  .result-box
    .result-box__left
      =f.label "できたこと", for:"result--gj" 
      .result-box__left--gj
        =f.text_area :content_g, size:"50x10", class:"result--gj",placeholder:"どんなことでもいいので、できたことを記録しましょう！"
    .result-box__right
      =f.label "不安なところ", for:"result--anxiety" 
      .result-box__right--anxiety
        =f.text_area :content_b, size:"50x10", class:"result--anxiety",placeholder:"よくわからないことや改善したいこと"
  .file-box
    .file-box__uploader
      = f.file_field :image, {}
  .memo-box
    =f.label :メモ, for:"record--memo" 
    .memo-box--t_area
    =f.text_area :memo, size:"80x10", class:"record--memo",placeholder:"思ったことなんでも記入してください"



