%nav{class:"navbar navbar-expand-lg navbar-dark bg-primary"}
  %a.navbar-brand{href:root_path}
    %h1
      はみがき記録帳
  %button.navbar-toggler{"aria-controls" => "navbarTogglerDemo02",
                         "aria-expanded" => "false", 
                         "aria-label" => "Toggle navigation", 
                         "data-target" => "#navbarTogglerDemo02", 
                         "data-toggle" => "collapse", 
                         type:"button"}
    %span.navbar-toggler-icon
  #navbarTogglerDemo02.collapse.navbar-collapse
    %ul.navbar-nav.mr-auto.mt-2.mt-lg-0
      %li.nav-item.active
        -if @animal.present? && @animal.id.present?
          %a.nav-link{href:animal_path(@animal)}
            =@animal.name
        -else
          %a.nav-link{href:new_animal_path} 新規登録
        %span.sr-only (current)
      -if user_signed_in?  
        %li.nav-item.dropdown
          %a#navbarDropdown.nav-link.dropdown-toggle{aria:{expanded:"false",
                                                          haspopup:"true"},
                                                    data:{toggle:"dropdown"},
                                                    href:"#",
                                                    role:"button"}
            =current_user.name
          .dropdown-menu{"aria-labelledby" => "navbarDropdown"}
            %a.dropdown-item{href:edit_user_path(current_user)} ユーザー情報編集
            %a.dropdown-item{href:"#"} あたらしい子を登録する
            .dropdown-divider

    %form.form-inline.my-2.my-lg-0
      %input.form-control.mr-sm-2{placeholder:"記録の検索", type:"search"}/
      %button.btn.btn-outline-success.my-2.my-sm-0{type:"submit"} Search